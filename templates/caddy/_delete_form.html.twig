<form method="post" action="{{ path('caddy_delete', {'id': caddy.id}) }}" onsubmit="return confirm('Are you sure you want to delete this item?');">
	<input type="hidden" name="_method" value="DELETE">
	<input type="hidden" name="_token" value="{{ csrf_token('delete' ~ caddy.id) }}">
	<button class="btn-save btn btn-danger btn-sm btn-rounded">
		<i class="far fa-trash-alt"></i>
	</button>
</form>
