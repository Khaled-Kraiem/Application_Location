{% extends "base.html.twig" %}
{% block stylesheets %}
	<link rel="stylesheet" href="https://cdn.datatables.net/1.10.22/css/dataTables.bootstrap4.min.css">

	<link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/twitter-bootstrap/4.5.2/css/bootstrap.css">
{% endblock %}

{% block body %}
	<!-- Table with panel -->
	<div
		class="card card-cascade narrower">
		<!--Card image-->
		<div class="view view-cascade gradient-card-header blue-gradient narrower py-2 mx-4 mb-3 d-flex justify-content-between align-items-center">

			<div>
				<button type="button" class="btn btn-outline-white btn-rounded btn-sm px-2">
					<i class="fas fa-th-large mt-0"></i>
				</button>
				<button type="button" class="btn btn-outline-white btn-rounded btn-sm px-2">
					<i class="fas fa-columns mt-0"></i>
				</button>
			</div>

			<a href="" class="white-text mx-3">Liste des offres</a>

			<div>
				<button type="button" class="btn btn-outline-white btn-rounded btn-sm px-2">
					<i class="fas fa-pencil-alt mt-0"></i>
				</button>
				<button type="button" class="btn btn-outline-white btn-rounded btn-sm px-2">
					<i class="far fa-trash-alt mt-0"></i>
				</button>
				<button type="button" class="btn btn-outline-white btn-rounded btn-sm px-2">
					<i class="fas fa-info-circle mt-0"></i>
				</button>
			</div>

		</div>
		<!--/Card image-->

		<div class="px-4">
			<div
				class="table-wrapper">
				<!--Table-->
				<table
					id="search" class="table table-striped table-bordered table table-hover mb-0" style="width:100%">
					<!--Table head-->
					<thead>
						<tr>
							<th class="th-lg">
								Image
								<i class="fas fa-sort ml-1"></i>
							</th>
							<th class="th-lg">
								Propriétaire de produit
								<i class="fas fa-sort ml-1"></i>
							</th>
							<th class="th-lg">
								Type de produit
								<i class="fas fa-sort ml-1"></i>
							</th>
							<th class="th-lg">
								Quand a-t-il été publiée
								<i class="fas fa-sort ml-1"></i>
							</th>
							<th class="th-lg">
								Disponibilité
								<i class="fas fa-sort ml-1"></i>
							</th>
							<th class="th-lg">
								Visibilité
								<i class="fas fa-sort ml-1"></i>
							</th>
						</tr>
					</thead>
					<!--Table head-->

					<!--Table body-->
					<tbody>
						{% for publication in publications %}
							<tr>
								<td>
									{% if publication.filename %}
										<a href="{{ path('admin_publication_show', {'id': publication.id}) }}">
											<img src="/images/products/{{publication.filename}}" class="img-fluid">
										</a>
									{% else %}
										<a href="{{ path('admin_publication_show', {'id': publication.id}) }}">
											<img src="/images/public/no-image.png" class="img-fluid">
										</a>
									{% endif %}
								</td>
								<td>{{publication.publicateur.username}}</td>
								<td>{{publication.souscategory.name}}</td>
								<td>{{publication.createdAt|date("F jS \\a\\t g:ia")}}</td>
								<td>
									<center>{{publication.disponibilite ? '<i class="far fa-check-circle"></i>' : '<i class="far fa-times-circle"></i>' }}</center>
								</td>
								<td>
									<center>{{publication.visible ? '<i class="far fa-eye"></i>' : '<i class="far fa-eye-slash"></i>' }}</center>
								</td>
							</tr>
						{% endfor %}
					</tbody>
					<!--Table body-->
				</table>
				<!--Table-->
			</div>
		</div>
	</div>
	<!-- Table with panel -->
{% endblock %}
{% block script %}
	<script>
		$(document).ready(function () {
$('#search').DataTable();
});
	</script>
	<script src="https://code.jquery.com/jquery-3.5.1.js"></script>
	<script src="https://cdn.datatables.net/1.10.22/js/jquery.dataTables.min.js"></script>
	<script src="https://cdn.datatables.net/1.10.22/js/dataTables.bootstrap4.min.js"></script>
{% endblock %}
