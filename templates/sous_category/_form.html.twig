{{ form_start(form) }}


<div class="form-row">
	<div class="col-md-3 mb-4">{{ form_widget(form.name) }}</div>
	<div class="col-md-3 mb-4"></div>

	<div class="col-md-1 mb-4"></div>
	<div class="col-md-5 mb-4">{{ form_widget(form.description) }}</div>

</div>
<br><br>
<div class="form-row">
	<div class="col-md-2 mb-4">{{ form_row(form.category) }}</div>
	<div class="col-md-2 mb-4"></div>
	<div class="col-md-7 mb-4">
		<div class="file-field">
			<a class="btn-floating peach-gradient mt-0 float-left">
				<i class="fas fa-paperclip" aria-hidden="true"></i>
				{{ form_widget(form.imageFile)}}
			</a>
			<div class="file-path-wrapper">
				<h4>Ajouter une image</h4>
			</div>
		</div>
	</div>
	<div class="col-md-1 mb-4"></div>
</div>
<br><br>

<div class="form-row">
	<div class="col-md-2 mb-6"></div>
	<div class="col-md-2 mb-6"></div>
	<div class="col-md-2 mb-6"></div>
	<div class="col-md-2 mb-6"></div>
	<div class="col-md-2 mb-6"></div>
	<div class="col-md-2 mb-6">
		<a href="{{ path('sous_category_index') }}" class="btn-save btn btn-default btn-sm btn-rounded">
			<i class="far fa-hand-point-left"></i>
		</a>
		<button type="submit" class="btn-save btn btn-success btn-sm btn-rounded">
			<i class="fas fa-save"></i>
		</button>

	</div>
</div>
{{ form_end(form) }}
