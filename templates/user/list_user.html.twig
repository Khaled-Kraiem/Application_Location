{% extends "base.html.twig" %}
{% block body %}
	<h1>Liste des utilisateurs
		<a class="btn-save btn btn-default btn-sm btn-rounded" href="{{ path('category_new') }}">
			<i class="fas fa-plus-square"></i>
		</a>
	</h1>
	<div class="container pt-5 my-5 z-depth-1">
		<section class="p-md-3 mx-md-5 text-center">
			<div class="row">
				{% for user in users %}
					<div class="col-lg-3 col-md-4 col-sm-6 mb-3">
						<div class="p-5">
							<div class="avatar w-100 white d-flex justify-content-center align-items-center">
								<a href="{{ path('show_profil_utilisateur', {'id': user.id}) }}">
									<img src="/images/public/no-image.png" class="img-fluid">
								</a>
							</div>
							<div class="text-center mt-3">
								<h5 class="font-weight-bold pt-2">{{user.username}}
								</h5>
								<p class="text-muted">
									<h6 class="font-weight-bold pt-2">{{user.type}}</h6>
									<a class"btn btn-primary" href="{{ path('show_profil_utilisateur', {'id': user.id}) }}">
										<i class="far fa-eye"></i>
									</a>
								</p>
							</div>
						</div>
					</div>
				{% endfor %}
			</div>
		</section>
	</div>

{% endblock %}
